{
  "[python]": {
    "editor.tabSize": 2,
    "editor.insertSpaces": true,
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "ms-python.black-formatter"
  },
  "files.exclude": {
    "**/.git": true,
    "**/.pyc": {
      "when": "$(basename).py"
    },
    "**/__pycache__": true,
    "**/*.pytest_cache": true
  }
}
